# App runtime
NODE_ENV=production
PORT=5000

# Postgres (primary DB + sessions)
DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DBNAME
SESSION_SECRET=replace-with-long-random-string

# Replit OIDC (current auth implementation)
REPL_ID=
ISSUER_URL=https://replit.com/oidc

# Staging convenience: bypass Replit/OIDC entirely (DO NOT enable in production)
DISABLE_AUTH=false
DEV_USER_ID=dev-user
DEV_ROLE=1000
DEV_IDCOMPANY=
DEV_EMAIL=dev@localhost
DEV_FIRST_NAME=Dev
DEV_LAST_NAME=User
DEV_PROFILE_IMAGE_URL=

# OVH MySQL (source of truth)
OVH_DB_HOST=
OVH_DB_PORT=3306
OVH_DB_USER=
OVH_DB_PASSWORD=
OVH_DB_NAME=
OVH_DB_CONNECT_TIMEOUT=10000
